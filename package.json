{
  "name": "newtab-puzzletab",
  "displayName": "PuzzleTab - New Tab",
  "version": "0.4.0",
  "description": "一款简洁的浏览器新标签页扩展",
  "private": true,
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:prepare dev:web",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf extension/dist extension/manifest.json extension.*",
    "lint": "eslint 'src/**/*.{json,ts,js,vue}'",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.15.0",
    "@ffflorian/jszip-cli": "^3.1.5",
    "@iconify/json": "^1.1.408",
    "@iconify/vue": "^3.1.1",
    "@intlify/vite-plugin-vue-i18n": "^3.2.1",
    "@types/chrome": "^0.0.162",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^16.10.2",
    "@types/webextension-polyfill": "^0.8.2",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@vitejs/plugin-vue": "^2.0.1",
    "@vue/compiler-sfc": "^3.2.26",
    "@vueuse/core": "^7.5.3",
    "chokidar": "^3.5.2",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.6.0",
    "esno": "^0.10.0",
    "fs-extra": "^10.0.0",
    "kolorist": "^1.5.0",
    "naive-ui": "^2.23.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4",
    "unplugin-auto-import": "^0.4.20",
    "unplugin-icons": "^0.11.4",
    "unplugin-vue-components": "^0.15.6",
    "vite": "^2.7.10",
    "vite-plugin-md": "^0.11.7",
    "vite-plugin-windicss": "^1.4.8",
    "vue": "^3.2.26",
    "vue-demi": "^0.11.4",
    "vue-i18n": "^9.2.0-beta.26",
    "web-ext": "^6.4.0",
    "webext-bridge": "^5.0.0",
    "webextension-polyfill": "^0.8.0"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "dayjs": "^1.10.7"
  }
}
