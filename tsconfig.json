{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "typeRoots": [
      "node_modules/@types",
      "src/types/"
    ],
    "types": [
      "vite/client",
      "chrome"
    ],
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"]
    }
  },
  "exclude": ["dist", "node_modules"],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ]
}
